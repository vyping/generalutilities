<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <stroke
                android:color="?colorButtonInsidePressedMain"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonInsidePressedSecundary"
                android:centerColor="?colorButtonInsidePressedMain"
                android:endColor="?colorButtonInsidePressedSecundary" />
            <corners
                android:topLeftRadius="68dp"
                android:topRightRadius="24dp"
                android:bottomRightRadius="68dp"
                android:bottomLeftRadius="68dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:color="?colorButtonInsideMain"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonInsideSecundary"
                android:centerColor="?colorButtonInsideMain"
                android:endColor="?colorButtonInsideSecundary" />
            <corners
                android:topLeftRadius="68dp"
                android:topRightRadius="24dp"
                android:bottomRightRadius="68dp"
                android:bottomLeftRadius="68dp"/>
        </shape>
    </item>
</selector>