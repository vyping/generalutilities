<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="oval">
            <stroke
                android:color="?colorButtonOutsidePressedSecundary"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonOutsidePressedSecundary"
                android:centerColor="?colorButtonOutsidePressedMain"
                android:endColor="?colorButtonOutsidePressedSecundary" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:color="?colorButtonOutsideSecundary"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonOutsideSecundary"
                android:centerColor="?colorButtonOutsideMain"
                android:endColor="?colorButtonOutsideSecundary" />
        </shape>
    </item>
</selector>