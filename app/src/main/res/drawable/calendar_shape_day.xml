<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <stroke
                android:color="?colorButtonOutsidePressedMain"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonOutsidePressedSecundary"
                android:centerColor="?colorButtonOutsidePressedMain"
                android:endColor="?colorButtonOutsidePressedSecundary" />
            <corners
                android:radius="16dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:color="?colorButtonOutsideMain"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonOutsideSecundary"
                android:centerColor="?colorButtonOutsideMain"
                android:endColor="?colorButtonOutsideSecundary" />
            <corners
                android:radius="16dp"/>
        </shape>
    </item>
</selector>