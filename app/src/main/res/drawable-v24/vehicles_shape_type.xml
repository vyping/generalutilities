<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
        <item
            android:state_pressed="true">
                <shape
                    android:shape="oval">
                        <stroke
                            android:color="@color/BlueLight100"
                            android:width="1dp"/>
                        <gradient
                            android:angle="90"
                            android:startColor="@color/BlueLight100"
                            android:centerColor="@color/BlueUltraLight100"
                            android:endColor="@color/BlueLight100" />
                </shape>
        </item>
        <item>
                <shape
                    android:shape="oval">
                        <stroke
                            android:color="@color/BlueLight100"
                            android:width="1dp"/>
                        <gradient
                            android:angle="90"
                            android:startColor="@color/BlueMid100"
                            android:centerColor="@color/BlueLight100"
                            android:endColor="@color/BlueMid100" />
                </shape>
        </item>
</selector>