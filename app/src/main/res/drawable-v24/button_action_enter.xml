<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">

        <shape
            android:shape="rectangle">

            <stroke
                android:color="@color/GreenMid070"
                android:width="1dp"/>

            <gradient
                android:angle="90"
                android:startColor="@color/GreenMid080"
                android:centerColor="@color/GreenLight080"
                android:endColor="@color/GreenMid080" />

            <corners
                android:radius="64dp" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">

            <stroke
                android:color="@color/GreenDark100"
                android:width="1dp"/>

            <gradient
                android:angle="90"
                android:startColor="@color/GreenLight070"
                android:centerColor="@color/GreenDark070"
                android:endColor="@color/GreenLight070" />
            <corners
                android:radius="64dp" />
        </shape>
    </item>
</selector>