<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">

        <shape
            android:shape="oval">

            <stroke
                android:color="@color/BlueLight080"
                android:width="1dp"/>

            <gradient
                android:angle="90"
                android:startColor="@color/BlueUltraLight090"
                android:centerColor="@color/BlueLight080"
                android:endColor="@color/BlueUltraLight090" />

            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">

            <stroke
                android:color="@color/BlueLight080"
                android:width="1dp"/>

            <gradient
                android:angle="90"
                android:startColor="@color/BlueLight090"
                android:centerColor="@color/BlueMid060"
                android:endColor="@color/BlueLight090" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>