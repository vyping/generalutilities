<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">

        <shape
            android:shape="rectangle">

            <stroke
                android:color="@color/RedMid070"
                android:width="1dp"/>

            <gradient
                android:angle="90"
                android:startColor="@color/RedMid080"
                android:centerColor="@color/RedLight080"
                android:endColor="@color/RedMid080" />

            <corners
                android:radius="64dp" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">

            <stroke
                android:color="@color/RedDark100"
                android:width="1dp"/>

            <gradient
                android:angle="90"
                android:startColor="@color/RedLight070"
                android:centerColor="@color/RedDark070"
                android:endColor="@color/RedLight070" />
            <corners
                android:radius="64dp" />
        </shape>
    </item>
</selector>