<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/Rl_Ins_General"
    android:background="@drawable/vehicles_shape_inside"
    android:layout_width="@dimen/scale_80dp"
    android:layout_height="@dimen/scale_80dp"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    android:gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/popup_container_center"
            app:tint="@color/colorPrimaryDark10" />

        <ImageView
            android:id="@+id/Iv_Ins_Type"
            android:src="@drawable/icon_vehicle_car"
            android:layout_width="match_parent"
            android:layout_height="13dp"
            android:layout_marginBottom="-2dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toTopOf="@+id/Tv_Ins_IdVehicle"
            app:tint="@color/colorPrimaryDark10" />

        <TextView
            android:id="@+id/Tv_Ins_IdVehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Register"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark10"
            android:textSize="@dimen/txt_15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Tv_Ins_Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:gravity="center"
            android:text="IdCard"
            android:textAlignment="gravity"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark10"
            android:textSize="@dimen/txt_12sp"
            app:layout_constraintTop_toBottomOf="@+id/Tv_Ins_IdVehicle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>