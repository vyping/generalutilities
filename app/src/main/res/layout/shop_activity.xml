<?xml version="1.0" encoding="utf-8"?>

<layout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable name="shopActivity" type="com.vyping.libraries.shop.ShopActivity" />
        <variable name="methodHandler" type="com.vyping.masterlibrary.views.recyclerview.methods.MethodsHandler"/>
        <variable name="productBinder" type="com.vyping.libraries.utilities.models.products.ProductBinder"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Cl_MainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Rv_Not_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="62dp"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            app:itemViewBinder="@{productBinder}"
            app:interfase="@{shopActivity.adapterInterfase}"
            app:items="@{methodHandler.methodsDisplayed}"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Fl_MarketCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="?colorPrimary"
            app:srcCompat="@drawable/icon_shopping_basket" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>