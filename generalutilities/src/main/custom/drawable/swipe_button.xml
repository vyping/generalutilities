<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:shape="rectangle">

            <gradient
                android:angle="0"
                android:startColor="#8A7910"
                android:centerColor="#FFDC00"
                android:endColor="#8A7910" />
            <corners
                android:topLeftRadius="?paddingLayoutTopLeft"
                android:topRightRadius="?paddingLayoutTopRight"
                android:bottomLeftRadius="?paddingLayoutBottomLeft"
                android:bottomRightRadius="?paddingLayoutBottomRight" />

            <size android:width="100dp" />
            <size android:height="60dp" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:drawable="@drawable/arrow"></item>

</layer-list>

