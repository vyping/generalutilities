<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogWindowContainer">

    <LinearLayout style="@style/DialogBodyContainerWrap">

        <LinearLayout
            android:id="@+id/linearLayout"
            style="@style/DialogTitleHeader">

            <LinearLayout style="@style/DialogTitleContainer">

                <TextView
                    android:id="@+id/Tv_Custom_IconTitle"
                    style="@style/DialogTitleIcon" />

                <TextView
                    android:id="@+id/Tv_Custom_TextTitle"
                    style="@style/DialogTitleText" />

            </LinearLayout>

            <Space style="@style/DialogSpace" />

            <Button
                android:id="@+id/Btn_Custom_IconInfo"
                style="@style/DialogInfoButton" />

        </LinearLayout>

        <LinearLayout style="@style/DialogBackground">

            <TextView
                android:id="@+id/Tv_Custom_Information"
                style="@style/DialogInstructions" />

            <LinearLayout
                android:id="@+id/Ll_Custom_MainContainer"
                style="@style/DialogMainContainerWrap"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Ll_Custom_Footer"
            style="@style/DialogOptionsFooter">

            <LinearLayout
                android:id="@+id/Ll_Custom_FooterNegative"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Btn_Custom_Negative"
                    style="@style/DialogButtonCancel" />

            </LinearLayout>

            <Space style="@style/DialogSpace" />

            <LinearLayout
                android:id="@+id/Ll_Custom_FooterPositive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:orientation="vertical">

                <Button
                    android:id="@+id/Btn_Custom_Positive"
                    style="@style/DialogButtonConfirm" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

