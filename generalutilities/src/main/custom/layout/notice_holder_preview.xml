<?xml version="1.0" encoding="utf-8"?>

<layout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="notice" type="com.vyping.masterlibrary.models.notices.Notice" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Tv_Men_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                android:gravity="center"
                android:hint="Title"
                android:text="@{notice.Title}"
                android:textAlignment="gravity"
                android:textColor="@color/colorNegro"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/Tv_Men_Subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_weight="0"
                android:breakStrategy="balanced"
                android:gravity="center"
                android:hint="Description"
                android:lines="1"
                android:maxLines="1"
                android:minLines="1"
                android:text="@{notice.SubTitle}"
                android:textAlignment="gravity"
                android:textColor="@color/GreyDark15"
                android:textSize="14sp"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                tools:targetApi="m" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="18dp"
                android:layout_weight="0"
                android:background="@color/GreyDark050"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/Iv_Men_Image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:elevation="6dp"
                    android:scaleType="fitCenter"
                    app:profileImage="@{notice.Url}" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>