        <item name="android:hint">@string/hint</item>
        <item name="android:textColorHint">@color/GreyLight10</item>
    </style>

    <style name="DialogDatePicker">
        <item name="android:background">@drawable/layout_globe_body</item>
        <item name="android:backgroundTint">?colorDialogSecundaryButton</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
