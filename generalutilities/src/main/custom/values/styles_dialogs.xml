        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogMainContainerWrap">
        <item name="android:background">@drawable/background_window</item>
        <item name="android:backgroundTint">?colorDialogMainContainer</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center</item>
    </style>


    // Dialogs Utilities - Notice

    <style name="DialogChooseOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:hint">@string/hint</item>
        <item name="android:textColor">?colorDialogInstructionsText</item>
        <item name="android:textSize">@dimen/fontPlus2</item>
