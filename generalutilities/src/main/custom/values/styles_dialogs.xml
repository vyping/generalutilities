        <item name="android:textColor">?colorDialogInstructionsText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fontPlus6</item>
        <item name="android:hint">@string/instructions</item>
    </style>

    <style name="DialogInputText" parent="@android:style/Widget.Material.Light.EditText">
        <item name="android:background">@drawable/background_window</item>
        <item name="android:backgroundTint">?colorDialogInputTextBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
