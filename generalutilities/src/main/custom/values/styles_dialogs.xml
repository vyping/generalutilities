    // Dialogs Body - Notice

    <style name="DialogBackground">
        <item name="android:background">@drawable/background_window</item>
        <item name="android:backgroundTint">?colorDialogBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
