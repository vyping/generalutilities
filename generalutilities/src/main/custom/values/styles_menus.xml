<resources>

    <style name="MenuButton">
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:textColor">?colorMenuButtonText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:drawableTintMode">?colorMenuButtonText</item>
        <item name="android:drawablePadding">-4dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fontBasic</item>
        <item name="android:windowEnterAnimation">@animator/zoom_in</item>
        <item name="android:windowExitAnimation">@animator/zoom_out</item>
    </style>

    <style name="MenuVerticalButton">
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:textColor">?colorMenuButtonText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fontPlus10</item>
        <item name="android:windowEnterAnimation">@animator/zoom_in</item>
        <item name="android:windowExitAnimation">@animator/zoom_out</item>
    </style>

    <style name="MenuHorizontalButton">
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:textColor">?colorMenuButtonText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:drawablePadding">24dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/fontPlus10</item>
        <item name="android:windowEnterAnimation">@animator/zoom_in</item>
        <item name="android:windowExitAnimation">@animator/zoom_out</item>
    </style>

</resources>
