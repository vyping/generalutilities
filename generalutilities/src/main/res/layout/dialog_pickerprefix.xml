<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogWindowContainerWrap">

    <LinearLayout
        style="@style/DialogBodyContainerWrap">

        <LinearLayout
            android:id="@+id/linearLayout"
            style="@style/DialogTitleHeader">

            <LinearLayout
                style="@style/DialogTitleContainer">

                <TextView
                    android:id="@+id/Tv_PickerPrefix_IconTitle"
                    style="@style/DialogTitleIcon"/>

                <TextView
                    android:id="@+id/Tv_PickerPrefix_TextTitle"
                    style="@style/DialogTitleText" />

            </LinearLayout>

            <Space
                style="@style/DialogSpace"/>

            <Button
                android:id="@+id/Btn_PickerPrefix_IconInfo"
                style="@style/DialogInfoButton"/>

        </LinearLayout>

        <LinearLayout
            style="@style/DialogBackground">

            <TextView
                android:id="@+id/Tv_PickerPrefix_Instructions"
                style="@style/DialogInstructions"/>

            <LinearLayout
                android:id="@+id/Ll_PickerPrefix_Remitent"
                style="@style/DialogMainContainerWrap">

                <NumberPicker
                    android:id="@+id/number_PickerPrefix_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:gravity="center"/>

                <EditText
                    android:id="@+id/Et_PickerPrefix_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0"
                    android:background="@drawable/dialog_edittext"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textColor="@color/colorNegro" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            style="@style/DialogOptionsFooter">

            <Button
                android:id="@+id/Btn_PickerPrefix_Negative"
                style="@style/DialogOptionButton"/>

            <Space
                style="@style/DialogSpace"/>

            <Button
                android:id="@+id/Btn_PickerPrefix_Positive"
                style="@style/DialogOptionButton"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

