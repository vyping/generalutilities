<?xml version="1.0" encoding="utf-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="@color/PrimaryDark06" />
        </shape>
    </item>

    <item>
        <rotate android:fromDegrees="0" android:toDegrees="0" android:pivotY="50%" android:pivotX="30%">        <!---Background-->
            <shape>
                <gradient
                    android:type="sweep"
                    android:centerX="0.0"
                    android:centerY="0.0"
                    android:startColor="@color/PrimaryDark09"
                    android:centerColor="@android:color/transparent"
                    android:endColor="@android:color/transparent"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate android:fromDegrees="290" android:toDegrees="0" android:pivotY="40%" android:pivotX="30%">   <!---Top-->
            <shape>
                <gradient
                    android:type="sweep"
                    android:centerX="0.8"
                    android:centerY="0.3"
                    android:startColor="@color/PrimaryDark07"
                    android:centerColor="@android:color/transparent"
                    android:endColor="@android:color/transparent"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate android:fromDegrees="280" android:toDegrees="0" android:pivotY="50%" android:pivotX="30%">     <!---Right-->
            <shape>
                <gradient
                    android:type="sweep"
                    android:centerX="0.6"
                    android:centerY="0.7"
                    android:startColor="@color/PrimaryDark06"
                    android:centerColor="@android:color/transparent"
                    android:endColor="@android:color/transparent"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate android:fromDegrees="18" android:toDegrees="0" android:pivotY="40%" android:pivotX="30%">    <!---Bottom-->
            <shape>
                <gradient
                    android:type="sweep"
                    android:centerX="0.2"
                    android:centerY="0.5"
                    android:startColor="@color/PrimaryDark07"
                    android:centerColor="@android:color/transparent"
                    android:endColor="@android:color/transparent"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate android:fromDegrees="66" android:toDegrees="0" android:pivotY="50%" android:pivotX="50%">   <!---Left-->
            <shape>
                <gradient
                    android:type="sweep"
                    android:centerX="0.3"
                    android:centerY="0.5"
                    android:startColor="@color/PrimaryDark06"
                    android:centerColor="@android:color/transparent"
                    android:endColor="@android:color/transparent"/>
            </shape>
        </rotate>
    </item>

</layer-list>