<?xml version="1.0" encoding="UTF-8"?>

<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:shape="rectangle">

            <gradient
                android:angle="0"
                android:startColor="@color/RedDark100"
                android:centerColor="@color/RedMid100"
                android:endColor="@color/RedDark100" />
            <corners
                android:topLeftRadius="?paddingLayoutTopLeft"
                android:topRightRadius="?paddingLayoutTopRight"
                android:bottomLeftRadius="?paddingLayoutBottomLeft"
                android:bottomRightRadius="?paddingLayoutBottomRight" />

            <size android:width="80dp" />
            <size android:height="40dp" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:drawable="@drawable/arrow">
    </item>

</layer-list>

