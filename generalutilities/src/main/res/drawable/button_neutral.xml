<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="oval">
            <stroke
                android:color="?colorButtonNeutralPressedSecundary"
                android:width="1dp"/>

            <gradient
                android:angle="90"
                android:startColor="?colorButtonNeutralPressedSecundary"
                android:centerColor="?colorButtonNeutralPressedMain"
                android:endColor="?colorButtonNeutralPressedSecundary" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:color="?colorButtonNeutralSecundary"
                android:width="1dp"/>

            <gradient
                android:angle="90"
                android:startColor="?colorButtonNeutralSecundary"
                android:centerColor="?colorButtonNeutralMain"
                android:endColor="?colorButtonNeutralSecundary" />
        </shape>
    </item>
</selector>