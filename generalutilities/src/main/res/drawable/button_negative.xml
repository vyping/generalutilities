<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="oval">
            <stroke
                android:color="?colorButtonNegativePressedSecundary"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonNegativePressedSecundary"
                android:centerColor="?colorButtonNegativePressedMain"
                android:endColor="?colorButtonNegativePressedSecundary" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:color="?colorButtonNegativeSecundary"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonNegativeSecundary"
                android:centerColor="?colorButtonNegativeMain"
                android:endColor="?colorButtonNegativeSecundary" />
        </shape>
    </item>
</selector>