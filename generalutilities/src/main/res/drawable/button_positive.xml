<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="oval">
            <stroke
                android:color="?colorButtonPositivePressedSecundary"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonPositivePressedSecundary"
                android:centerColor="?colorButtonPositivePressedMain"
                android:endColor="?colorButtonPositivePressedSecundary" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <stroke
                android:color="?colorButtonPositiveSecundary"
                android:width="1dp"/>
            <gradient
                android:angle="90"
                android:startColor="?colorButtonPositiveSecundary"
                android:centerColor="?colorButtonPositiveMain"
                android:endColor="?colorButtonPositiveSecundary" />
        </shape>
    </item>
</selector>