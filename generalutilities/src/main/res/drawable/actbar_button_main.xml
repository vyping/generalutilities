<?xml version="1.0" encoding="UTF-8"?>

<selector
xmlns:android="http://schemas.android.com/apk/res/android">

<item
    android:state_pressed="true">
    <shape
        android:shape="oval">
        <stroke
            android:color="?colorActionBarMainButtonsPressed"
            android:width="1dp"/>
        <solid android:color="?colorActionBarMainButtonsPressed"/>
    </shape>
</item>
<item>
    <shape
        android:shape="oval">
        <stroke
            android:color="?colorActionBarMainButtons"
            android:width="1dp"/>
        <solid android:color="?colorActionBarMainButtons"/>
    </shape>
</item>
</selector>