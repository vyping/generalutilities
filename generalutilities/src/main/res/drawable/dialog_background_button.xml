<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

<item
android:state_pressed="true">
<shape
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:shape="rectangle">
    <stroke
        android:color="@color/colorPrimaryLigth1"
        android:width="1dp"/>
    <gradient
        android:angle="90"
        android:endColor="@color/colorPrimaryLigth1"
        android:centerColor="@color/colorPrimaryDark1"
        android:startColor="@color/colorPrimaryLigth1" />
    <corners
        android:radius="5dp" />
</shape>
</item>
<item>
<shape
    android:paddingBottom="8dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:shape="rectangle">
    <stroke
        android:color="@color/colorPrimaryDark1"
        android:width="1dp"/>
    <gradient
        android:angle="90"
        android:startColor="@color/colorPrimaryDark1"
        android:centerColor="@color/colorPrimaryLigth1"
        android:endColor="@color/colorPrimaryDark1" />
    <corners
        android:radius="5dp" />
</shape>
</item>
    </selector>