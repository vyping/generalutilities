<?xml version="1.0" encoding="utf-8"?>

<layout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="LogActivityBinding">
        <variable name="logActivity" type="com.vyping.business.login.LogActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Cl_MainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_activitys_primary">

        <LinearLayout
            android:id="@+id/Ll_SecondaryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/Tv_Wellcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:hint="¡Wellcome!"
                android:text="¡Bienvenido!"
                android:textColor="@color/GreyLight05"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Tv_Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="56dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="56dp"
                android:gravity="center"
                android:hint="Description"
                android:text="A la app de domicilios diseñada especificamente para conectarte con el comercio de Casablanca"
                android:textAlignment="gravity"
                android:textColor="@color/Grey"
                android:textSize="12sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/Iv_Logo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="64dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="32dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/icon_main" />

            <TextView
                android:id="@+id/Tv_Company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginEnd="56dp"
                android:gravity="center"
                android:hint="COMPANY"
                android:text="Casablanca"
                android:textAlignment="gravity"
                android:textColor="@color/GreyLight05"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <TextView
                android:id="@+id/Tv_Slogan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Slogan"
                android:text="Domicilios"
                android:textColor="@color/Grey"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <Button
                android:id="@+id/Btn_Logup"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button_rectangle_gradient"
                android:backgroundTint="@color/Grey"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Registrarme"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Btn_Login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="56dp"
                android:layout_marginBottom="48dp"
                android:background="@drawable/button_rectangle_gradient"
                android:backgroundTint="@color/Grey"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="Ingresar"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Grey"
                android:textSize="12sp"
                android:textStyle="normal"
                android:text="Ingresa con otros medios" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/Btn_Google"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_margin="8dp"
                    android:layout_weight="0"
                    android:background="@drawable/button_circle_empty"
                    android:backgroundTint="@color/Grey"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_google"
                    android:text="Button"
                    app:tint="@color/Grey" />

                <ImageButton
                    android:id="@+id/Btn_Phone"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_margin="8dp"
                    android:layout_weight="0"
                    android:background="@drawable/button_circle_empty"
                    android:backgroundTint="@color/Grey"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_cellphone"
                    android:text="Button"
                    app:tint="@color/Grey" />

                <ImageButton
                    android:id="@+id/Btn_Facebook"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="0"
                    android:layout_margin="8dp"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:text="Button"
                    android:background="@drawable/button_circle_empty"
                    android:backgroundTint="@color/Grey"
                    android:src="@drawable/icon_facebook"
                    app:tint="@color/Grey" />

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>