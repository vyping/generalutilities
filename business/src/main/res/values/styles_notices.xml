<?xml version="1.0" encoding="utf-8"?>

<resources>

    // Holder

    <style name="NoticeBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/background_out_framed</item>
        <item name="android:backgroundTint">?colorNoticeBackground</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NoticeTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:rotation">0</item>
        <item name="android:textColor">?colorNoticeTitle</item>
    </style>

    <style name="NoticeSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">-4dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:rotation">0</item>
        <item name="android:textColor">?colorNoticeSubTitle</item>
    </style>

    <style name="NoticeImageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="NoticeImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:elevation">6dp</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:rotation">0</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="NoticeImageBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:background">?colorNoticeImageBackground</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="NoticeQuantity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:rotation">0</item>
        <item name="android:textColor">?colorNoticeSubTitle</item>
    </style>

    <style name="NoticeContainerDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorNoticeDescription</item>
    </style>

    <style name="NoticeSubContainerDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?colorNoticeDescription</item>
    </style>

    <style name="NoticeDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NoticeDescriptionButon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">6dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoticePrevValue">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">0</item>
    <item name="android:layout_marginTop">4dp</item>
    <item name="android:layout_marginStart">8dp</item>
    <item name="android:layout_marginEnd">8dp</item>
    <item name="android:layout_marginBottom">-8dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">gravity</item>
    <item name="android:textSize">10sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:rotation">0</item>
    <item name="android:textColor">@color/RedDark10</item>
    </style>

    <style name="NoticeValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:rotation">0</item>
        <item name="android:textColor">?colorNoticeTitle</item>
    </style>

</resources>
